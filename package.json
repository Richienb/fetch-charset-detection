{
	"name": "fetch-charset-detection",
	"description": "Charset detection and conversion utilities, originally from node-fetch.",
	"keywords": [
		"content-type",
		"headers",
		"http",
		"meta",
		"node-fetch"
	],
	"version": "0.0.0",
	"main": "dist/index.js",
	"files": [
		"src/**/*",
		"dist/**/*"
	],
	"engines": {
		"node": ">=10"
	},
	"repository": "https://github.com/Richienb/fetch-charset-detection.git",
	"author": "Richie Bendall <richiebendall@gmail.com>",
	"license": "MIT",
	"scripts": {
		"docs": "typedoc",
		"build": "tsc && yarn docs",
		"dev": "yarn build --watch",
		"lint": "xo",
		"test": "yarn lint && ava"
	},
	"dependencies": {
		"@sindresorhus/is": "^2.0.0",
		"cheerio": "^1.0.0-rc.3",
		"content-type": "^1.0.4",
		"iconv-lite": "^0.6.1",
		"nice-try": "^2.0.0"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.13",
		"@types/content-type": "^1.1.3",
		"@types/nice-try": "^2.0.0",
		"ava": "^3.3.0",
		"eslint-config-richienb": "^0.3.0",
		"node-fetch": "^2.6.0",
		"ts-node": "^8.5.4",
		"typedoc": "^0.16.4",
		"typescript": "^3.7.4",
		"xo": "^0.26.0"
	},
	"resolutions": {
		"eslint": "^6.8.0"
	},
	"xo": {
		"extends": "richienb/ts",
		"overrides": [
			{
				"files": "test.js",
				"rules": {
					"import/default": 0,
					"node/no-missing-import": 0,
					"import/no-unresolved": 0,
					"node/no-unsupported-features/node-builtins": 0
				}
			}
		]
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	}
}
